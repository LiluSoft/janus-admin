{
    "extends": "tslint:recommended",
    "rules": {
        "no-console": [
            false
        ],
        "variable-name": false,
        "radix": false,
        "object-literal-sort-keys": false,
        "trailing-comma": [
            false
        ],
        "indent": [
            true,
            "tabs"
        ],
        "max-line-length": [
            false
        ],
        "no-string-literal": false,
        "class-name": false,
        "no-namespace": [
            false
        ],
        "no-bitwise": false,
        "no-unused-expression-chai": true
    },
    
    "rulesDirectory": [
        "node_modules/tslint-no-unused-expression-chai",
        "tslint-no-unused-expression-chai"
    ]
}
{
    "extends": [
        "tslint:recommended",
        "tslint-no-unused-expression-chai"
    ],
    "rules": {
        "no-console": [
            false
        ],
        "semicolon": true,
        "quotemark": true,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-trailing-underscore",
                "require-const-for-all-caps",
                "allow-snake-case"
            ]
        },
        "radix": false,
        "object-literal-sort-keys": false,
        "trailing-comma": [
            false
        ],
        "indent": [
            true,
            "tabs"
        ],
        "max-line-length": [
            false
        ],
        "no-string-literal": false,
        "class-name": true,
        "no-namespace": [
            false
        ],
        "interface-name": true,
        "no-shadowed-variable": true,
        "no-bitwise": false
    }
}
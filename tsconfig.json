{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "commonjs",
        "removeComments": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "target": "es2017",
        "lib": [
            "es2017"
        ],
        // "lib": [
        //     "es2015",
        //     "dom"
        // ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "files": [
        "node_modules/@types/jquery.blockui/index.d.ts"
    ],
    "typedocOptions": {
        "mode": "file",
        "out": "docs/html",
        "excludePrivate": true,
        "externalPattern": "**/node_modules",
        "toc": [
            "JanusAdmin",
            "IEventClient",
            "ITransport"
        ],
        "theme":"docs/theme"
    }
}